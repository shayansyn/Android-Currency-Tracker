    <!-- تم مخصوص SplashScreen -->
    <style name="Theme.GoldApp.Splash" parent="Theme.SplashScreen">
        <!-- پس‌زمینه splash -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- آیکون یا لوگوی برنامه -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_splash</item>

        <!-- رنگ آیکون اختیاری -->
<!--        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>-->

        <!-- بعد از splash، اپ روی کدوم تم بیاد -->
        <item name="postSplashScreenTheme">@style/Theme.GoldApp</item>
    </style>
</resources>